<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="@dimen/default_list_height"
    android:background="@color/item_background"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_height"
        android:id="@+id/item_view"
        style="@style/AppCardView"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_list_height"
            android:background="@drawable/cardholder_click_selector"
            android:paddingLeft="@dimen/icon_padding"
            android:paddingRight="@dimen/icon_padding"
            >


            <ImageButton
                style="@style/ImageControlButton"
                android:id="@+id/save_word"
                android:src="@drawable/ic_bookmark_border_white_24dp"
                android:tint="@color/tint_color_dark"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/OneLineTextView"
                tools:text="222222222222221"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:id="@+id/language_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/save_word"
                android:layout_toEndOf="@id/save_word"
                android:paddingLeft="@dimen/icon_padding"
                android:paddingRight="@dimen/icon_padding"
                android:layout_toLeftOf="@id/language_text"
                android:layout_toStartOf="@id/language_text"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextView"
                    tools:text="YYYYYyyyyyy"

                    android:id="@+id/source_text"


                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextView"
                    tools:text="yyy\YYYYY"
                    android:textStyle="italic"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/translate_text"
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>