<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightSmall">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_view"
        card_view:cardCornerRadius="1dp"
        android:clickable="true"
        card_view:contentPaddingLeft="0dp"
        card_view:contentPaddingRight="0dp"
        card_view:contentPaddingTop="0dp"
        card_view:contentPaddingBottom="0dp"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardMaxElevation="@dimen/card_elevation"
        card_view:contentPadding="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/border_text_color"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardholder_click_selector"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/OneLineTextView"
                tools:text="222222222222221"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:id="@+id/addition_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/OneLineTextView"
                tools:text="123123111111"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:id="@+id/main_text"
                android:layout_toLeftOf="@id/addition_text"
                android:layout_toStartOf="@id/addition_text"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>