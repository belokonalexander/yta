<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_list_height"
    android:id="@+id/item_view"
    style="@style/AppCardView">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_list_height"
            android:background="@drawable/cardholder_click_selector"
            android:id="@+id/clickable_item"

            >

            <ru.belokonalexander.yta.Views.EntitySearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_view"


                app:buttonsColor="@color/tint_color_dark"
                />

        </RelativeLayout>

</android.support.v7.widget.CardView>
