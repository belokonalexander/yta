<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingTop="4dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/word_controller"
        android:orientation="vertical"
        android:paddingRight="@dimen/icon_padding"
        >



    <ImageButton
        style="@style/ImageControlButton"
        android:id="@+id/save_word"
        android:src="@drawable/ic_bookmark_black_24dp"
        android:tint="@color/tint_color_dark"
        />

     <ImageButton
            style="@style/ImageControlButton"
            android:id="@+id/copy_word"
            android:src="@drawable/ic_content_copy_black_24dp"
            android:tint="@color/tint_color_dark"
         android:layout_marginTop="@dimen/vertical_large_item_margin"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/word_controller"
        android:orientation="vertical"
        >

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="12321312 dsf sdf sd fds fsd fsd fsd fsd fsdf sdf sd fsd "
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_large"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/composite_text_padding"
            android:id="@+id/t_word"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/original_word"
            android:paddingLeft="@dimen/composite_text_padding"
            tools:text="12321312 dsf sdf sd fds fsd fsd fsd fsd fsdf sdf sd fsd "
            android:textSize="@dimen/text_normal"
            android:textStyle="italic"
            android:visibility="gone"
            />
    </LinearLayout>




</RelativeLayout>