<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ImageControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:tint">@color/tint_color</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:textSize">@dimen/text_normal</item>

        <item name="android:textColor">@color/text_color</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="OneLineTextView">
        <item name="android:lines">1</item>
        <item name="android:textColor"> @color/text_color</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="AppCardView" parent="CardView">

        <item name="cardCornerRadius">1dp</item>
        <item name="android:clickable">true</item>
        <item name="contentPaddingLeft">0dp</item>
        <item name="contentPaddingRight">0dp</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="contentPaddingBottom">0dp</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>
        <item name="contentPadding">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/border_text_color</item>


    </style>




</resources>
