<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ImageControlButton">
        <item name="android:layout_width">@dimen/clickable_icon_hw</item>
        <item name="android:layout_height">@dimen/clickable_icon_hw</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:tint">@color/tint_color</item>


    </style>

    <style name="CustomEditTextStyle">

        <item name="android:textSize">@dimen/text_normal</item>

        <item name="android:textColor">@color/normal_text_color</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="OneLineTextView">
        <item name="android:lines">1</item>
        <item name="android:textColor"> @color/normal_text_color</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="AppCardView" parent="CardView">

        <item name="cardCornerRadius">1dp</item>
        <item name="android:clickable">true</item>
        <item name="contentPaddingLeft">0dp</item>
        <item name="contentPaddingRight">0dp</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="contentPaddingBottom">0dp</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>
        <item name="contentPadding">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/item_background</item>


    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/normal_text_color_white</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/normal_text_color_accent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MainButton" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="ClickableItem">
        <item name="android:background">@drawable/cardholder_click_selector</item>
    </style>


</resources>
